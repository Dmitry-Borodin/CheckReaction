<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".startscreen.StartActivity"
    android:id="@+id/StActivity"
    android:background="@color/ac_background"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/logo"
        android:id="@+id/ac_start_title_text"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Tutor"
        android:id="@+id/ac_start_text_tutorial"
        android:layout_marginTop="@dimen/margin_big"
        android:textStyle="normal"
        android:gravity="center"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="@string/simple_test_button"
        android:id="@+id/ac_start_simple_button"
        android:onClick="onClickSimpleTest"
        android:layout_marginTop="@dimen/margin_medium"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="@string/complex_test_button"
        android:id="@+id/ac_start_complex_button"
        android:onClick="onClickComplexTest"
        android:layout_marginTop="@dimen/margin_medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_mid_low"
        android:text="@string/username_hint"/>
    <EditText
        android:layout_width="@dimen/edittext_width"
        android:layout_height="wrap_content"
        android:id="@+id/ac_start_username_edittext"
        android:gravity="center"
        tools:text="user"/>

</LinearLayout>
