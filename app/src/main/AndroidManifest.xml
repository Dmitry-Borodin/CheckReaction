<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.two_two.checkreaction" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Halo" >
        <activity
            android:name=".startscreen.StartActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".reactiontest.TestActivity"
            android:parentActivityName=".startscreen.StartActivity"
            >
                <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".startscreen.StartActivity" />
        </activity>
        <activity
            android:name=".finishscreen.FinishActivity"
            android:parentActivityName=".startscreen.StartActivity"
            android:launchMode="singleTask">
        </activity>
    </application>
</manifest>
